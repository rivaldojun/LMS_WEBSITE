    <%- include('navbar.ejs', { currentPage: 'academy' }) %>
    <div class="container mt-5">
        <div class="ml-5 mt-5 mb-3">
            <div class="w-2/4 mb-4">
                <div class="text-center mt-8">
                    <h2 class="font-extrabold relative mb-4" style="font-size: 28px; color: blue;">Conferences</h2>
                    <div class="w-16 h-1 bg-blue-900 mx-auto" style="background-color: blue;"></div>
                </div>
            </div>
          </div>
        <% if (confs.length > 0) { %>
            <% confs.forEach(conf => { %>
        <div class="row align-items-center event-block no-gutters margin-40px-bottom">
            <div class="col-lg-5 col-sm-12">
                <div class="position-relative">
                    <img src="<%= conf.imagePath %>" alt="" style="height: 300px;">
                    <div class="events-date">
                        <div class="font-size28"><%= new Date(conf.date).getDate() %></div> <!-- Jour -->
                        <div class="font-size14"><%= new Date(conf.date).toLocaleString('default', { month: 'long' }) %></div> <!-- Mois -->
                        <div class="font-size14"><%= new Date(conf.date).getFullYear() %></div> <!-- AnnÃ©e -->
                    </div>
                </div>
            </div>
            <div class="col-lg-7 col-sm-12 mb-5">
                <div class="padding-60px-lr md-padding-50px-lr sm-padding-30px-all xs-padding-25px-all">
                    <h5 class="margin-15px-bottom md-margin-10px-bottom font-size22 md-font-size20 xs-font-size18 font-weight-500"><a href="event-details.html" class="text-theme-color"><%= conf.titre %></a></h5>
                    <ul class="event-time margin-10px-bottom md-margin-5px-bottom">
                        <li><i class="far fa-clock margin-10px-right"></i><%= new Date(conf.date).getHours() %> : <%= new Date(conf.date).getMinutes() %> </li>
                        <li><i class="fas fa-location margin-10px-right"></i><%=conf.lieu %> </li>
                    </ul>
                    <p class="mb-5" style="font-size: 18px;"><%=conf.description %></p>
                    <a class="butn small margin-10px-top md-no-margin-top" href="/details_confs/<%= conf.id %>" style="background-color: #192f59;border-radius: 50px;padding: 10px;color: white;margin-top: 50px;">En Savoir Plus <i class="fas fa-long-arrow-alt-right margin-10px-left"></i></a>
                </div>
            </div>
        </div>
        <% }); %>
            <% } else { %>
                <p>Aucune conferences n'est disponible pour le moment.</p>
            <% } %>
    </div>
<%- include('footer.ejs') %>
<style>
    body{
    background:#f5f5f5;
    margin-top:20px;}

.events-date {
    text-align: center;
    position: absolute;
    right: 30px;
    top: 30px;
    background-color: rgba(25, 47, 89, 0.9);
    color: #fff;
    padding: 12px 20px 8px 20px;
    text-transform: uppercase
}

.event-time li {
    display: inline-block;
    margin-right: 20px
}

.event-time li:last-child {
    margin-right: 0
}

.event-time li i {
    color: #59c17a
}

.event-block {
    box-shadow: 0px 0px 16px 0px rgba(187, 187, 187, 0.48)
}

.event-block ul li i {
    color: #59c17a
}

@media screen and (max-width: 1199px) {
    .event-date {
        padding: 10px 18px 6px 18px
    }
}

@media screen and (max-width: 575px) {
    .event-date {
        padding: 8px 15px 4px 15px
    }
    .events-date {
        padding: 10px 15px 6px 15px
    }
}

.position-relative {
    position: relative !important;
}

.margin-40px-bottom {
    margin-bottom: 40px;
}
.padding-60px-lr {
    padding-left: 60px;
    padding-right: 60px;
}

.margin-15px-bottom {
    margin-bottom: 15px;
}
.font-weight-500 {
    font-weight: 500;
}
.font-size22 {
    font-size: 22px;
}
.text-theme-color {
    color: #192f59;
}
.margin-10px-bottom {
    margin-bottom: 10px;
}
.margin-10px-right {
    margin-right: 10px;
}
</style>

</body>