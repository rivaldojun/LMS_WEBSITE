<!DOCTYPE html>
<head>
    <title>LMS</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Kanit:wght@400;700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Raleway:wght@400;700&display=swap" rel="stylesheet">
   
</head>

<body>
    <style>
        #prj1:hover{
            background-color: #315BA6;
        }
    </style>
    <%- include('navbar.ejs', { currentPage: 'projet' }) %>
    <div class="container" style="scale: 0.8;">
        <div class="w-2/4">
            <div class="text-center mt-8">
                <h2 class="font-extrabold relative mb-4" style="font-size: 28px; color: blue;">Projets</h2>
                <div class="w-16 h-1 bg-blue-900 mx-auto" style="background-color: blue;"></div>
            </div>
        </div>
        <div class="w-2/4"></div>

        <!-- Section 1 -->
        <% if (projet.length > 0) { %>
            <% projet.forEach(proj => { %>
        <section  class="w-full background-section1 flex my-12" style="background-color: rgb(191, 192, 255);padding: 30px;border-radius: 20px;margin-bottom: 20px;">
            <div class="container" >
                <div class="row">
                    <div class="col-md-6">
                        <img src="<%= proj.imagePath %>" alt="ship" style="width: 400px; height: 221px;border-radius: 50px;">
                    </div>
                    <div class="col-md-6">
                        <p class="text-black my-8" style="font-size: 30px;">
                            <%= proj.titre %>
                        </p>
                        <div class="flex justify-between items-center">
                            <a href="/details_projet/<%= proj.id %>" class="flex items-center text-white font-semibold px-4 py-2 rounded-lg" style="background-color: #315BA6; font-size: 20px;">
                                En savoir plus
                                <div class="flex items-center ml-2">
                                    <div class="w-0 h-px bg-turquoise"></div>
                                    <svg class="w-6 h-6 text-white-800 dark:text-white" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 10">
                                        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M1 5h12m0 0L9 1m4 4L9 9"/>
                                    </svg>
                                </div>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <% }); %>
            <% } else { %>
                <p style="text-align: center;">Aucun blog n'est disponible pour le moment.</p>
            <% } %>

        

    </div>
<%- include('footer.ejs') %>
</body>