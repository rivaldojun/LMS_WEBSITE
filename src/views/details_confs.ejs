<%- include('navbar.ejs', { currentPage: 'academy' }) %>
<section id="event" class="section" style="background-image:url('../assets/images/flou.jpg');height: 500px;background-position: center;">
  <div class="container ">
    <div class="row ">
      <div class="col-md-3 col-sm-6 col-xs-12 mt-5">
        <div class="tab-block wow fadeInDown animated" data-wow-delay="0s" style="visibility: visible;-webkit-animation-delay: 0s; -moz-animation-delay: 0s; animation-delay: 0s;">
          <div class="icon">
            <i class="fa fa-location-pin"></i>
          </div>
          <div class="desc">
            <h4>Lieu</h4>
            <p style="color: white;"><%=conf.lieu %></p>
          </div>
        </div>
      </div>
      <div class="col-md-3 col-sm-6 col-xs-12 mt-5">
        <div class="tab-block wow fadeInDown animated" data-wow-delay="0.2s" style="visibility: visible;-webkit-animation-delay: 0.2s; -moz-animation-delay: 0.2s; animation-delay: 0.2s;">
          <div class="icon">
            <i class="fa fa-calendar"></i>
          </div>
          <div class="desc">
            <h4>Date &amp; Heure</h4>
            <p style="color: white;"><%= new Date(conf.date).getHours() %>h:<%= new Date(conf.date).getMinutes() %>m, <%= new Date(conf.date).getDate() %> <%= new Date(conf.date).toLocaleString('default', { month: 'long' }) %>, <%= new Date(conf.date).getFullYear() %></p>
          </div>
        </div>
      </div>
      <div class="col-md-3 col-sm-6 col-xs-12 mt-5">
        <div class="tab-block wow fadeInDown animated" data-wow-delay="0.4s" style="visibility: visible;-webkit-animation-delay: 0.4s; -moz-animation-delay: 0.4s; animation-delay: 0.4s;">
          <div class="icon">
            <i class="fa fa-microphone"></i>
          </div>
          <div class="desc">
            <h4>Conferenciers</h4>
            <p style="color: white;"><%=conf.speaker %></p>
          </div>
        </div>
      </div>
      <div class="col-md-3 col-sm-6 col-xs-12 mt-5">
        <div class="tab-block last-block wow fadeInDown animated" data-wow-delay="0.6s" style="visibility: visible;-webkit-animation-delay: 0.6s; -moz-animation-delay: 0.6s; animation-delay: 0.6s;">
          <div class="icon">
            <i class="fa fa-wallet"></i>
          </div>
          <div class="desc left">
            <h4>Nombre de personne invit√©es</h4>
            <p style="color: white;">-</p>
          </div>
        </div>
      </div>
      <div class="col-md-12">
        <div class="content-text">
          <h3 class="wow fadeInUp animated" data-wow-delay="0.8s" style="visibility: visible;-webkit-animation-delay: 0.8s; -moz-animation-delay: 0.8s; animation-delay: 0.8s;font-family: Impact, Haettenschweiler, 'Arial Narrow Bold', sans-serif;"><%=conf.titre %></h3>
          <p class="wow fadeInUp animated" data-wow-delay="1s" style="visibility: visible;-webkit-animation-delay: 1s; -moz-animation-delay: 1s; animation-delay: 1s;color: white"><%=conf.description %></p>
        </div>
      </div>
    </div>
  </div>
  <div class="justify-content-center flex">
  <a href="<%=conf.lien %>" class="btn btn center justify-center bg-blue-400" style="color: white;background-color: #007bb6;border-radius: 50px;" >Participer</a>
</div>
</section>

